<h1 align="center"> Alpha Blogger </h1>
<div class="center">

<% @users.each do |user| %>
<ul class="listing">
  <div class="row">
    <div class="well col-xs-4 col-xs-offset-4">
      <li><%=link_to gravatar_for(user), user_path(user) %></li>
      <li class="article-title"> <%= link_to user.username, user_path(user) %></li>
      <small><%= pluralize(user.articles.count, "article") if user.articles %></small>
      <% if logged_in? and current_user.admin? %>
      <li> <%= link_to "[delete this user]", user_path(user), method: :delete,
                       data: {confirm: "Are you sure you want to delete all users and article"}
      %> </li>
      <% end %>
    </div>
  </div>
</ul>
<% end %>
  <%= will_paginate  %>
</div>